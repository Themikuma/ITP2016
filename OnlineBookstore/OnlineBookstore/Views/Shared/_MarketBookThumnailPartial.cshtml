@using OnlineBookstore.Models
@model BookPreviewViewModel

<style>
    img {
        max-width: 100%;
        width: 150px;
        max-height : 100%;
        height: 320px;
    }
</style>

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Action("GetLocalImage", "Images", new { imageName = Model.Picture })" alt=""  />
        <div class="caption">
            <h4 class="pull-right">@string.Format("{0:C2}", Model.Price) $</h4>
            <h4>
                @Html.ActionLink(Model.Title, "BookDetails", "Details", new { isbn = Model.Isbn },"")
            </h4>
            @if (Model.Description.Length < 200)
            {
                <p><font face="Time New Roman">@Model.Description</font></p>
            }
            else
            {
                <p><font face="Time New Roman"> @Model.Description.Substring(0, 200) @Html.ActionLink("See more...", "BookDetails", "Details", new { isbn = Model.Isbn }, "");</font></p>
            }
        </div>
        <div class="ratings">
            <p>
                @{int i = 0; }  
                @for (; i < Model.Stars; i++)
                {
                    <span class="glyphicon glyphicon-star"></span>
                }
                @for (; i < 5; i++)
                {

                    <span class="glyphicon glyphicon-star-empty"></span>
                }
            </p>
        </div>
    </div>
</div>
 